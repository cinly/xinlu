
<div class="col-md-8 col-md-offset-2">
  <h2 class="text-center">添写答案信息</h2>
  <%= simple_form_for [@choice] do |f| %>
    <%= f.input :name, placeholder: "请输入与试题相同的名字"%>
    <%= f.input :is_aa1en, :label => "A" %>
    <%= f.input :is_bb1en, :label => "B" %>
    <%= f.input :is_cc1en, :label => "C" %>
    <%= f.input :is_dd1en, :label => "D" %>
    <%= f.input :is_ee1en, :label => "E" %>
    <%= f.input :is_ff1en, :label => "F" %>
    <%= f.submit "Submit", class: "btn btn-default" %>
  <% end %>
</div>

<hr>

<br>
<div class="row">
  <div class="col-md-6">
    <% if @photos.present? %>
      <% @photos.each_with_index do |p, index| %>
        <% if index == 0 %>
          <%= image_tag p.image.medium.url %>
        <% else %>
          <%= image_tag p.image.thumb.url %>
        <% end %>
      <% end %>
    <% else %>
      <h4>#</h4>
    <% end %>
  </div>
  <table class="table table-bordered">

    <thead>
      <tr>

      </tr>
    </thead>
    <tbody>
      <tr>
        <td>

        </td>

         <td>
           <%= render_aa1_status(@choice) %> A.
           <br><br>
           <%= render_bb1_status(@choice) %> B.
           <br><br>
           <%= render_cc1_status(@choice) %> C.
           <br><br>
           <%= render_dd1_status(@choice) %> D.
         </td>

       </tr>
     </tbody>
   </table>

   <div class="col-md-2 col-md-offset-10">
      <%= link_to(content_tag(:i, "继续答题", class: "fa fa-reply-all"), exams_path) %>
    </div>
