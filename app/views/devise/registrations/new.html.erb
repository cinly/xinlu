
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-md-offset-2 user_setup_content">
      <h2 class="text-center", style="color:#0097A7;;" >用户注册</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>


      <div class="form-inputs">
        <%= f.input :email, label: "邮箱", autofocus: true , class: "form-control" , :style => "border: solid 1px white;", placeholder: "请输入有效邮箱"%>
        <%= f.input :password, label: "密码", required: true, class: "form-control", placeholder: ("至少#{@minimum_password_length}位字符长度" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "密码确认", class: "form-control", placeholder: ("至少#{@minimum_password_length}位字符长度" if @minimum_password_length), required: true %>
        <%= f.input :remember_me, label: "记住密码", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.submit "注册", class: "btn btn-primary" ,:style => "border: none;color:white;width:100%;background-color:#0097A7;border-radius:50px;"%>
      </div><br>
      <%= render "devise/shared/links" %>
    <% end %>

  </div>
